@model ChangeUserBankDetails
@{
    ViewData["Title"] = "EditUserBankInfo";
    Layout = "~/Areas/Admin/Views/Shared/_ServersideLayout.cshtml";
}

@if (TempData["BankInfoUpdated"] != null) {
    <div class="alert alert-light" role="alert">
        @TempData["BankInfoUpdated"]
    </div>
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h5 class="m-0 text-dark">Edit User</h5>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                    <li class="breadcrumb-item active">Edit Bank Info</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="card card-primary" style="width:600px;margin:auto">
            <div class="card-header">
            </div>
            <div class="card-body">
                <form method="post" asp-action="EditUserBankInfo" asp-controller="User" asp-area="Admin">
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label>Bank Name</label>
                                <input type="text" class="form-control" asp-for="BankName" />
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label>Account Number</label>
                                <input type="text" class="form-control" asp-for="BankAccountNumber" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Swift Code</label>
                        <input type="text" class="form-control" asp-for="BankSwiftCode" />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</section>

