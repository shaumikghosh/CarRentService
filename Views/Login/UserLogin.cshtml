@model LoginModel

@{
    ViewData["Title"] = "User Login";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<div style="background: url('https://mcarsstatic.cachefly.net/img/social/facebook/Mitsubishi-suv-crossovers-fb.jpg') no-repeat; background-size: cover ">
    <div class="login-area" style="width: 500px; margin: auto; padding:150px 0 150px 0">
        <div class="card">
            <div class="card-header">
                <h4 class="text-center font-weight-bold"><i class="fas fa-sign-in-alt"></i> User Login Panel</h4>
            </div>
            <div class="card-body">
                <form method="post" asp-controller="Login" asp-action="UserLogin" asp-route-url="@ViewContext.HttpContext.Request.Query["url"]">
                    <div class="form-group">
                        <i class="fas fa-envelope"></i> <label asp-for="Email"></label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group">
                        <i class="fas fa-key"></i> <label asp-for="Password"></label>
                        <input type="password" asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group">
                        <input type="checkbox" asp-for="RememberMe" />
                        <label asp-for="RememberMe"></label>
                    </div>
                    <button type="submit" class="btn btn-info btn-block mt-3"><i class="fas fa-sign-in-alt"></i> Login</button>
                    <div class="mt-3">
                        <a asp-action="Signup" asp-controller="Signup" class="float-left">Have not account yet?</a>
                        <a asp-action="ForgetPassword" asp-controller="ForgetPassword" class="float-right">Forgot password?</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section SweetAlert {
    @if (TempData["InvalidCredentialError"] != null) {
        <script>
            swal({
                title: "Status!",
                text: "@TempData["InvalidCredentialError"]",
