@model SendMail
@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_WebLayout.cshtml";
}

<div id="banner-area" class="banner-area" style="background-image:url(clientside/images/banner/banner1.jpg)">
    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">Contact</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a href="#">Home</a></li>
                                <li class="breadcrumb-item"><a href="#">Company</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Contact Us</li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div><!-- Banner text end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h3 class="column-title">We love to hear</h3>
                <form id="contact-form" method="post" asp-action="Contact" asp-controller="Contact" role="form">
                    <div class="error-container"></div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="FullName"></label>
                                <input class="form-control form-control-name" asp-for="FullName" id="name" placeholder="" type="text">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input class="form-control form-control-email" asp-for="Email" id="email" placeholder="" type="email">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="Subject"></label>
                                <input class="form-control form-control-subject" asp-for="Subject" id="subject" placeholder="">
                            </div>
                        </div>
                        <div class="col">
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input class="form-control form-control-subject" asp-for="PhoneNumber" id="subject" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Message"></label>
                        <textarea class="form-control form-control-message" asp-for="Message" id="message" placeholder="" rows="10"
                                  required></textarea>
                    </div>
                    <div class="text-right">
                        <br>
                        <button class="btn btn-primary solid blank" type="submit">Send Message</button>
                    </div>
                </form>
            </div>

        </div><!-- Content row -->
    </div><!-- Conatiner end -->
</section><!-- Main container end -->


@section SweetAlert {
    @if (TempData["MessageNotDelivered"] != null) {
        <script>
            swal({
                title: "Status!",
                text: "@TempData["MessageNotDelivered"]",
                icon: "error",
                button: "Ok!",
            });
        </script>
    }
    @if (TempData["MessageDelivered"] != null) {
        <script>
            swal({
                title: "Status!",
                text: "@TempData["MessageDelivered"]",
                icon: "success",
                button: "Ok!",
            });
        </script>
    }


}